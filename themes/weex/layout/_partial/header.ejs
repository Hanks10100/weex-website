    <header id="header">
      <a id="logo" href="/">
        <img src="<%= config.root %>/images/logo.png" />
      </a>
      <div id="main-nav">
        <ul id="links">
          <li><a href="/guide"><%= _p('index.doc') %></a></li>
          <li><a href="/showcase"><%= _p('index.showcase') %></a></li>
          <li><a href="/download"><%= _p('index.download') %></a></li>
